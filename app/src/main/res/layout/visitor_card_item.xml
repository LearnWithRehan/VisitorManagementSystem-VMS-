<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linearInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVisitorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111827"/>

            <TextView
                android:id="@+id/tvVisitorID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee"
                android:textColor="#374151"/>

            <TextView
                android:id="@+id/tvVisitorEntryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Date"
                android:textColor="#374151"/>
        </LinearLayout>

        <!-- Out Button -->
        <Button
            android:id="@+id/btnMarkInactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out"
            android:textColor="#FFFFFF"
            android:backgroundTint="#EF4444"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C4D76"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Visitor Management System"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Add Visitor -->
            <LinearLayout
                android:id="@+id/addVisitor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Visitor"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Active Visitors -->
            <LinearLayout
                android:id="@+id/activeVisitors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/activevms"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Visitors"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- History / Reports -->
            <LinearLayout
                android:id="@+id/historyReports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/historyimg"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History / Reports"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Settings / Profile -->
            <LinearLayout
                android:id="@+id/settingsProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_setting"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings / Profile"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- QR Code Generation -->
            <LinearLayout
                android:id="@+id/qrGeneration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_qrcode"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Generator"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>
            <!-- QR SCANNER -->
            <LinearLayout
                android:id="@+id/scanqrcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/qrscanner"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Scanner"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Notification -->
            <LinearLayout
                android:id="@+id/notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_notification"
                    app:tint="#2C4D76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification"
                    android:textSize="16sp"
                    android:textColor="#2C4D76"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>

        <!-- Bottom Button -->
        <Button
            android:id="@+id/gateCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carlingte Code"
            android:background="@drawable/outline_button"
            android:textColor="#2C4D76"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
